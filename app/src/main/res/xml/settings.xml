<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <android.support.v7.preference.PreferenceCategory android:title="@string/category_general">

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/key_notification"
            android:summary="@string/summary_notification"
            android:title="@string/title_notification" />

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/key_speak"
            android:summary="@string/summary_speak"
            android:title="@string/title_speak" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/key_translation"
            android:summary="@string/summary_translation"
            android:title="@string/title_translation" />

        <android.support.v7.preference.ListPreference
            android:defaultValue="default"
            android:entries="@array/yandex_language_names"
            android:entryValues="@array/yandex_language_codes"
            android:key="@string/key_language"
            android:summary="%s"
            android:title="@string/title_language" />


        <!--        <im.delight.android.languages.LanguagePreference
                    android:key="@string/key_language"
                    android:title="@string/title_language"
                    android:enabled="true"
                    android:selectable="true" />-->

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory android:title="@string/category_theme">

        <android.support.v7.preference.CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_theme"
            android:summary="@string/summary_theme"
            android:title="@string/title_theme" />

        <!--        <org.polaric.colorful.ColorPickerPreference
                    android:summary="@string/summary_primary_color"
                    android:title="@string/title_primary_color"
                    auto:primary_color="true" />

                <org.polaric.colorful.ColorPickerPreference
                    android:summary="@string/summary_accent_color"
                    android:title="@string/title_accent_color"
                    auto:accent_color="true" />-->

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.Preference
        android:key="@string/key_feedback"
        android:title="@string/title_feedback" />

    <android.support.v7.preference.Preference
        android:key="@string/key_rate"
        android:title="@string/title_rate" />

    <android.support.v7.preference.Preference
        android:key="@string/key_about"
        android:title="@string/title_about" />

</android.support.v7.preference.PreferenceScreen>